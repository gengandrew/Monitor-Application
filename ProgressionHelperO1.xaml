<Window x:Class="TimeTracker.ProgressionHelperO1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        Title="ProgressionHelperO1" Height="145" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#545454" Background="#99A099" MouseLeftButtonDown="DragEvent">
        <Grid>
            <Button Background="Green" Content="Continue" HorizontalAlignment="Center" VerticalAlignment="Top" Width="110" Height="35" Margin="0,90,0,0" Name="Submit" Click="Submit_Click" FontWeight="DemiBold"/>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Non-optional Recipe Progression, please press Continue to continue." VerticalAlignment="Top" Margin="0,32,0,0" FontSize="15" FontWeight="Bold" Foreground="#151515"/>
        </Grid>
    </Border>
</Window>
